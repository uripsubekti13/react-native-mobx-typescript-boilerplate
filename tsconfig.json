{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es7", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react-native",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "react",
      "react-native"
    ]
  },
  "files": [
    "src/**/*.ts",
    "src/typings.d.ts",
    "App.tsx"
  ],
  "exclude": [
    "android",
    "ios",
    "build",
    "node_modules"
  ],
  "compileOnSave": false
}
